# Params
# caption: Caption for image (required)
# Slots
# image_content: Slot for image content.

{%- macro image_span(caption) -%}
  {%- set image_content = caller('image_content') -%}
  {%- set has_image = image_content|trim|length>0 -%}
  <section class="p-section">
    <div class="row">
      {% if has_image %}
        <div class="col">
          <div class="p-image-container--cinematic u-align--center u-vertically-center u-no-padding--bottom">
            {{ image_content }}
          </div>
        </div>
      {% endif %}
      <div class="col-start-large-4 col-9">
        <small>{{ caption }}</small>
      </div>
    </div>
  </section>
{%- endmacro -%}