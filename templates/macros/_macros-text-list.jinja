# Params
# title: Title of text section (required)
# Slots
# list_item_content[1-10]: List item content

{%- macro text_list(title) -%}
  <section class="p-section">
    <div class="row">
      <div class="col-start-large-4 col-9">
        <hr class="p-rule is-muted" />
        <h2 class="p-section--shallow">{{ title }}</h2>
        <ul class="p-list--divided">
          {% for number in range(1, 11)%}
            {%- set list_item_content = caller('list_item_content_' + number|string) -%}
            {%- set has_list_item_content = list_item_content|trim|length > 0 -%}

            {%- if has_list_item_content -%}
              <li class="p-list__item has-bullet">{{ list_item_content }}</li>
            {%- endif -%}

          {% endfor %}
        </ul>
      </div>
    </div>
  </section>
{%- endmacro -%}
